@page "/chat";
@using BelgiansCavesRegisterBlazor.Client.Models;
<h3>Chat Room</h3>
Author : <input type="text" @bind-value="Author" />
Message : <input type="text" @bind-value="newMessage" />
<button class="btn btn-success btn-sm" @onclick="SendMessage">Send</button>
<button class="btn btn-info btn-lg" @onclick="JoinGroup">Join</button>
<button class="btn btn_outline-danger col-sm-6" @onclick="SendToGroup">Group</button>
<hr />
<h4>The messages</h4>
<ul>
    @foreach (Message m in ListeMessages)
    {
        <li>@m.Author - @m.Content</li>
    }
</ul>
